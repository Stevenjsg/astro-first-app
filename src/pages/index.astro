---
import data from "data/data.json";
import Layout from "@layouts/Layout.astro";
import SelectRegion from "@components/SelectRegion.astro";
---

<Layout title="Central Market Black Desert Online">
  <div class="inset-0 absolute -z-10">
    <video
      class="object-cover w-full h-full object-center aspect-video"
      src="video/skinjoin_world_loop.webm"
      autoplay
      loop
      muted
    >
      <source srcset="video/skinjoin_world_loop.webm" type="video/webm" />
    </video>
  </div>
  <main
    class="container w-full min-h-screen mx-auto px-4 py-2 grid place-content-center"
  >
    <SelectRegion regions={data.region} />
  </main>
</Layout>
